# mock_data_generator.R

set.seed(123)

# 50 species
species <- paste0("Species_", sprintf("%02d", 1:50))

# 6 samples (you can change this)
samples <- paste0("Sample", 1:6)

# Poisson counts ~ species abundance
counts_mat <- matrix(
  rpois(length(species) * length(samples), lambda = 1000),
  nrow = length(species),
  dimnames = list(species, samples)
)

# Save as TSV: rows = species, columns = samples
counts_df <- data.frame(
  Species = rownames(counts_mat),
  counts_mat,
  check.names = FALSE
)

write.table(
  counts_df,
  file = "kraken_species_counts.tsv",
  sep = "\t",
  quote = FALSE,
  row.names = FALSE
)

# Optional: sample metadata (groups, etc.)
meta_df <- data.frame(
  Sample = samples,
  Group  = c("Control", "Control", "Treatment", "Treatment", "Treatment", "Control")
)

write.table(
  meta_df,
  file = "sample_metadata.tsv",
  sep = "\t",
  quote = FALSE,
  row.names = FALSE
)

cat("Mock data written to:\n  - kraken_species_counts.tsv\n  - sample_metadata.tsv\n")
